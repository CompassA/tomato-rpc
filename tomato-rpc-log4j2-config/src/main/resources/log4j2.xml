<Configuration>
    <Properties>
        <!-- 终端日志输出格式 -->
        <Property name="TERMINAL_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{-%5p} [%15t] %highlight{%-40.40logger{39}} : %m%n
        </Property>

        <!-- 日志文件输出格式 -->
        <Property name="FILE_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} -%5p [%15t] %-40.40logger{39} : %m%n
        </Property>

        <!-- 日志目录 -->
        <Property name="LOG_HOME">
            logs/tomato-rpc
        </Property>
    </Properties>

    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="${TERMINAL_PATTERN}"/>
        </Console>

        <RollingFile name="TOMATO-RPC-DEFAULT-APPENDER"
                     fileName="${LOG_HOME}/default.log"
                     filePattern="${LOG_HOME}/default.log.%d{yyyy-MM-dd}-%i">
            <PatternLayout pattern="${FILE_PATTERN}" charset="UTF-8" />
            <ThresholdFilter level="INFO"/>

            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="512MB"/>
            </Policies>

            <DefaultRolloverStrategy max="5">
                <Delete basePath="${LOG_HOME}" maxDepth="1">
                    <IfFileName glob="default.log.*"/>
                    <IfLastModified age="P3D"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="TOMATO-RPC-ERROR-APPENDER"
                     fileName="${LOG_HOME}/common_error.log"
                     filePattern="${LOG_HOME}/common_error.log.%d{yyyy-MM-dd}-%i">
            <PatternLayout pattern="${FILE_PATTERN}" charset="UTF-8"/>
            <ThresholdFilter level="ERROR"/>

            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="512MB"/>
            </Policies>

            <DefaultRolloverStrategy max="5">
                <Delete basePath="${LOG_HOME}" maxDepth="1">
                    <IfFileName regex="common_error.log.*"/>
                    <IfLastModified age="P3D"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

    </Appenders>

    <Loggers>
        <AsyncLogger name="TOMATO-RPC-DEFAULT" level="INFO" additivity="false">
            <AppenderRef ref="TOMATO-RPC-DEFAULT-APPENDER"/>
            <AppenderRef ref="TOMATO-RPC-ERROR-APPENDER"/>
        </AsyncLogger>
    </Loggers>
</Configuration>